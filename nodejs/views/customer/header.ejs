<div class="container-fluid">
    <ul class="nav justify-content-center">
        <li class="nav-item">
            <a href="/admin/login"><img src="https://traicay141.vn/upload/hinhanh/logo-3974-89140.png" alt=""></a>
        </li>
        <li>
            <form class="d-flex" style="margin-top: 11%;" method="post" action="/customer/product/search">
                <input class="form-control me-2" type="search" placeholder="Search ..." aria-label="Search" name="search">
                <button class="btn btn-outline-success" type="submit" style="color: white">Search</button>
            </form>
        </li>
        <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/customer/home">Home</a>
        </li>
        <li class="nav-item dropdown" id="dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Products
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                <% dataHeaderProducts.forEach((data) => { 
                        %>
                        <li><a class="dropdown-item" href="/customer/product/category/<%= data.ID %>"><%= data.Name %></a></li>
                    <% 
                }) %>
            </ul>
        </li>
        <li class="nav-item dropdown" id="dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Origin
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                <% dataHeaderOrigins.forEach((data) => { 
                        %>
                        <li><a class="dropdown-item" href="/customer/product/origin/<%= data.ID %>"><%= data.Origin %></a></li>
                    <% 
                }) %>
            </ul>
        </li>
        <% if(!sessionID) { %>
            <li class="nav-item">
                <button type="button" class="btn btn-success"><a href="/customer/login">Login</a></button>
            </li>
            <li class="nav-item">
                <button type="button" class="btn btn-danger"><a href="/customer/signup">Sign Up</a></button>
            </li>
        <% } else { %>
            <li class="nav-item dropdown" id="dropdown">
                <button class="dropdown-toggle" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="background: rgba(0,232,93,0.5); color: white;border: 0px;">
                Account: <%= sessionID.Username %>
                </button>
                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                <li><a class="dropdown-item" href="/customer/changePass">Change Password</a></li>
                <li><a class="dropdown-item" href="/customer/cart">Cart</a></li>
                <li><a class="dropdown-item" href="/customer/orders">Current Orders</a></li>
                <li><a class="dropdown-item" href="/customer/orders/history">Order History</a></li>
                <li><a class="dropdown-item" href="/customer/login">Logout</a></li>
                </ul>
            </li>
        <% } %>
    </ul>
    <script src="/customer/js/popper.min.js"></script>
    <script src="/customer/js/bootstrap.min.js"></script>
</div>
