<div class="container" style="background: white;">
    <div class="Title" style="margin-top: 10px;">
        <div>
            Current Orders
        </div>
    </div>

    <h3>Order Information</h3>
    <table class="table table-striped">
        <thead>
            <td>No.</td>
            <td>Recipient Name</td>
            <td>Address</td>
            <td>Phone Number</td>
            <td>Total Amount</td>
            <td>Purchase Date</td>
            <td>Note</td>
            <td>Status</td>
            <td colspan="2">Actions</td>
        </thead>
        <% if(!dataOrders[0]) { %>
            <tr>
                <td colspan="9" style="text-align: center;">No orders yet !!!</td>
            </tr>
        <% } else { 
            counter = 0;
            dataOrders.forEach((data) => { %>
                <tr>
                    <td><%= counter += 1 %></td>
                    <td><%= data.RecipientName %></td>
                    <td><%= data.Address %></td>
                    <td><%= data.PhoneNumber %></td>
                    <td><%= data.TotalAmount %> <sup>VND</sup></td>
                    <td><%= data.PurchaseDate %></td>
                    <td><%= data.Note %></td>
                    <td><%= data.Status %></td>
                    <td><a href="/customer/order/details/<%= data.ID %>" style="color: blue;">Details</a></td>
                    <td><a href="/customer/order/cancel/<%= data.ID %>" style="color: blue;">Cancel Order</a></td>
                </tr>
            <% })
        } %>
    </table>
</div>
